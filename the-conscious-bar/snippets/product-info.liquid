                    </div>

                    <script>
                      document.addEventListener('DOMContentLoaded', function() {
                        const $quantityInput = $('#{{ product_form_id }}-quantity');
                        const $quantityValue = $('.product-quantity-value');
                        const $minusBtn = $('.product-quantity-btn--minus');
                        const $plusBtn = $('.product-quantity-btn--plus');

                        // Sync display with hidden input
                        function updateDisplay() {
                          const value = parseInt($quantityInput.val()) || 1;
                          $quantityValue.text(value);

                          // Update button states
                          const min = parseInt($quantityInput.attr('min')) || 1;
                          const max = parseInt($quantityInput.attr('max')) || 999;

                          $minusBtn.prop('disabled', value <= min);
                          $plusBtn.prop('disabled', value >= max);

                          // Update pricing based on quantity
                          if (typeof window.updatePPPriceCSS === 'function') {
                            // Get current cart count and add the product quantity
                            const currentCartCount = parseInt($('#totalItems').data('total-items')) || 0;
                            window.updatePPPriceCSS(currentCartCount + value);
                          }
                        }

                        // Handle button clicks
                        $('.product-quantity-btn').on('click', function(e) {
                          e.preventDefault();

                          const action = $(this).data('action');
                          const currentValue = parseInt($quantityInput.val()) || 1;
                          const min = parseInt($quantityInput.attr('min')) || 1;
                          const max = parseInt($quantityInput.attr('max')) || 999;

                          let newValue = currentValue;
                          if (action === 'plus') {
                            newValue = Math.min(currentValue + 1, max);
                          } else if (action === 'minus') {
                            newValue = Math.max(currentValue - 1, min);
                          }

                          if (newValue !== currentValue) {
                            $quantityInput.val(newValue).trigger('change');
                            updateDisplay();
                          }
                        });

                        // Listen for input changes (from other sources)
                        $quantityInput.on('change input', updateDisplay);

                        // Initial setup
                        updateDisplay();
                      });
                    </script>
