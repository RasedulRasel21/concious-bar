                      }

                      /* Hide the original quantity selector */
                      .product-info__quantity-selector .quantity-selector {
                        display: none;
                      }
                    </style>

                    <!-- Original quantity selector (hidden but functional) -->
                    <quantity-selector class="quantity-selector">
                      <button data-action="minus" type="button" class="quantity-selector__button" aria-label="{{ 'product.quantity.decrease_quantity' | t }}">{% render 'icon' with 'minus', width: 10, height: 2 %}</button>
