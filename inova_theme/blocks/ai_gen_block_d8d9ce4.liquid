{% doc %}
  @prompt
    3 row video portfolio style layout with header, sublime, paragraph over, and heading under each video
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-portfolio-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-portfolio__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-video-portfolio__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
  }

  .ai-video-portfolio__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-video-portfolio__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-video-portfolio__item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-video-portfolio__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background-color: {{ block.settings.video_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-video-portfolio__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-portfolio__video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-portfolio__video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-video-portfolio__overlay-text-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.overlay_text_size }}px;
    text-align: center;
    padding: 12px 20px;
    background-color: {{ block.settings.overlay_background_color }};
    border-radius: {{ block.settings.overlay_border_radius }}px;
    z-index: 2;
    max-width: 90%;
  }

  .ai-video-portfolio__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    text-align: center;
  }

  @media screen and (max-width: 989px) {
    .ai-video-portfolio__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-video-portfolio__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-video-portfolio__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.header_size }}px * 0.8);
    }

    .ai-video-portfolio__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }

    .ai-video-portfolio__overlay-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.overlay_text_size }}px * 0.9);
    }

    .ai-video-portfolio__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-video-portfolio-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.header != blank or block.settings.subtitle != blank %}
    <div class="ai-video-portfolio__header-{{ ai_gen_id }}">
      {% if block.settings.header != blank %}
        <h2 class="ai-video-portfolio__title-{{ ai_gen_id }}">{{ block.settings.header }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="ai-video-portfolio__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-video-portfolio__grid-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign video_key = 'video_' | append: i
        assign overlay_text_key = 'overlay_text_' | append: i
        assign heading_key = 'heading_' | append: i

        assign video = block.settings[video_key]
        assign overlay_text = block.settings[overlay_text_key]
        assign heading = block.settings[heading_key]
      %}

      <div class="ai-video-portfolio__item-{{ ai_gen_id }}">
        <div class="ai-video-portfolio__video-wrapper-{{ ai_gen_id }}">
          {% if video != blank %}
            {% if video.sources[1].url %}
              <video
                class="ai-video-portfolio__video-{{ ai_gen_id }}"
                autoplay
                loop
                muted
                playsinline
              >
                <source src="{{ video.sources[1].url }}" type="{{ video.sources[1].mime_type }}">
                <source src="{{ video.sources[0].url }}" type="{{ video.sources[0].mime_type }}">
              </video>
            {% endif %}
          {% else %}
            <div class="ai-video-portfolio__video-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if overlay_text != blank %}
            <div class="ai-video-portfolio__overlay-text-{{ ai_gen_id }}">
              {{ overlay_text }}
            </div>
          {% endif %}
        </div>

        {% if heading != blank %}
          <h3 class="ai-video-portfolio__heading-{{ ai_gen_id }}">{{ heading }}</h3>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

