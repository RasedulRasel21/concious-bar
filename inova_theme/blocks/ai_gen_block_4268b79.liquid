{% doc %}
  @prompt
    BIG LOGO
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-big-logo-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-big-logo-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_max_width }}px;
    width: 100%;
  }

  .ai-big-logo-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-big-logo-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-big-logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 200px;
  }

  .ai-big-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-big-logo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-big-logo-wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_max_width_mobile }}px;
    }

    .ai-big-logo-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_mobile }}px 20px {{ block.settings.padding_bottom_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-big-logo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-big-logo-wrapper-{{ ai_gen_id }}">
    {% if block.settings.logo_link %}
      <a href="{{ block.settings.logo_link }}" class="ai-big-logo-link-{{ ai_gen_id }}">
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 2000 }}"
            alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
            loading="lazy"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
            class="ai-big-logo-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-big-logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-big-logo-empty-state-{{ ai_gen_id }}">
              Next, add your logo
            </div>
          </div>
        {% endif %}
      </a>
    {% else %}
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 2000 }}"
          alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
          loading="lazy"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
          class="ai-big-logo-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-big-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-big-logo-empty-state-{{ ai_gen_id }}">
            Next, add your logo
          </div>
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Big logo",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo link"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 100,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 600
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "logo_max_width_mobile",
      "min": 100,
      "max": 500,
      "step": 25,
      "unit": "px",
      "label": "Maximum width",
      "default": 300
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 30
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Big logo"
    }
  ],
  "tag": null
}
{% endschema %}
